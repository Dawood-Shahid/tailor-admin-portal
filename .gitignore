# root and workspace package managers
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# workspace node_modules
/frontend/node_modules
/backend/node_modules
**/node_modules/

# testing
/coverage
/backend/coverage
/frontend/coverage

# frontend (Next.js)
